    "dynamicLogic": {
        "fields": {
            "employerName": {
                "visible": {
                    "conditionGroup": [
                        {
                            "type": "or",
                            "value": [
                                {
                                    "type": "equals",
                                    "attribute": "employmentType",
                                    "value": "Permanent"
                                },
                                {
                                    "type": "equals",
                                    "attribute": "employmentType",
                                    "value": "Contract"
                                }
                            ]
                        }
                    ]
                }
            },
            "designation": {
                "visible": {
                    "conditionGroup": [
                        {
                            "type": "or",
                            "value": [
                                {
                                    "type": "equals",
                                    "attribute": "employmentType",
                                    "value": "Permanent"
                                },
                                {
                                    "type": "equals",
                                    "attribute": "employmentType",
                                    "value": "Contract"
                                }
                            ]
                        }
                    ]
                }
            },
            "duplicateOf": {
                "visible": {
                    "conditionGroup": [
                        {
                            "type": "isTrue",
                            "attribute": "isDuplicate"
                        }
                    ]
                }
            }
        }
    }
